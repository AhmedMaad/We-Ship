<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    tools:context=".general.SignUp2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TVStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name" />

        <EditText
            android:id="@+id/name_et"
            style="@style/ETStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp" />

        <TextView
            style="@style/TVStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tax Number" />

        <EditText
            android:id="@+id/tax_number_et"
            style="@style/ETStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp" />

        <TextView
            style="@style/TVStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commercial Registration" />

        <EditText
            android:id="@+id/commercial_registration_et"
            style="@style/ETStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp" />

        <TextView
            style="@style/TVStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Address" />

        <EditText
            android:id="@+id/address_et"
            style="@style/ETStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp" />

        <TextView
            style="@style/TVStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Phone Number" />

        <EditText
            android:id="@+id/phone_number_et"
            style="@style/ETStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp"
            android:inputType="phone" />

        <TextView
            style="@style/TVStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Type" />

        <EditText
            android:id="@+id/company_type_et"
            style="@style/ETStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next_btn"
            style="@style/BtnStyle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Next"
            android:textAllCaps="false" />

        <!--<Spinner
            android:id="@+id/company_type_spinner"
            style="@style/ETStyle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginEnd="64dp" />-->

    </LinearLayout>

</ScrollView>